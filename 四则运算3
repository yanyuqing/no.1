                        System.out.println("("+aa+"/"+bb+")"+" / "+"("+cc+"/"+dd+")"+"=");
                     
                    else if(bb==1&&dd!=1)
                        System.out.println(aa+" / "+"("+cc+"/"+dd+")"+"=");
                        
                    else if(bb!=1&&dd==1)
                        System.out.println("("+aa+"/"+bb+")"+" / "+cc+"=");
                        
                    else
                        System.out.println(aa+"/"+cc+"=");
