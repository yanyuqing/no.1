                                        System.out.print((int)al1.get(k)+"/"+"("+(int)al1.get(k+1)+"+"+(int)al1.get(k+2)+")");
                                        list[j]=(int)al1.get(k)/((int)al1.get(k+1)+(int)al1.get(k+2));
